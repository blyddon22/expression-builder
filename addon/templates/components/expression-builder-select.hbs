<select onchange={{action "onchange" value="target.value"}}>
  {{#each options as |option|}}
    {{#if option.disabled}}
      <option disabled selected={{unless selected true false}} value={{option.value}}>{{option.text}}</option>
    {{else}}
      <option selected={{is-equal selected option.value}} value={{option.value}}>{{option.text}}</option>
    {{/if}}
  {{/each}}
</select>
