<div class="block" data-id="{{id}}">
  {{#if block.wrapper}}
    <div class="block-wrapper">{{block.wrapper}}</div>
  {{else}}
    <div class="block-type">
      {{#if hasOptions}}
        {{component typeComponent options=typeOptions changeAction=(action "typeChanged") selected=block.type}}
      {{else}}
        {{emptyText}}
      {{/if}}
    </div>
  {{/if}}
  {{#if hasType}}
    <div class="block-value">
      {{#if hasOptions}}
        {{component valueComponent options=valueOptions changeAction=(action "valueChanged") selected=block.value}}
      {{/if}}
    </div>
  {{/if}}
</div>
{{#if isComplete}}
  <div class="block-operator">
    {{component operatorComponent options=operatorOptions changeAction=(action "operatorChanged") selected=block.operator}}
   </div>
{{/if}}
{{#if hasDelete}}
  <div class="block-action">
    {{component deleteComponent delete=(action delete)}}
  </div>
{{/if}}
